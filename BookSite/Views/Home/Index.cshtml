<div class="BookOptions">
    <h2>Book Options</h2>
    <ul>
        <li>
            @Html.ActionLink("Add Book", "SearchNewBook", "Books", null, new { @class = "btn btn-primary btn-large" })
        </li>
        <li>
            @Html.ActionLink("Book Details", "Details", "Books", null, new { @class = "btn btn-primary btn-large" })
        </li>
    </ul>
</div>



